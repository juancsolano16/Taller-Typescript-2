{
  "compilerOptions": {
    "target": "es2015",     
    "lib": ["es2015", "dom"],             
    "module": "none",                
    "rootDir": "./src",                    
    "outDir": "./dist",                    
    "declaration": false,                
    "sourceMap": false,                  
    "removeComments": true,              
    "strict": true,                      
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
